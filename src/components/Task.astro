---
interface Props {
  title: string;
  status: string;
}

const { title, status } = Astro.props;
let state = "";
if (
  status != "No empezada" &&
  status != "En proceso" &&
  status != "Finalizada"
) {
  state = "not";
} else {
  state = status;
}
